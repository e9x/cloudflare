{
  "compilerOptions": {
    "types": ["node"],
    "lib": ["ESNext", "DOM"],
    "target": "ESNext",
    "module": "ESNext",
    "outDir": "dist",
    "allowSyntheticDefaultImports": true,
    "stripInternal": true,
    "moduleResolution": "node",
    "declaration": true,
    "sourceMap": true,
    "strict": true
  },
  "include": ["src/**/*"]
}
